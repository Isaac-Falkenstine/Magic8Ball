<%= form_for @user do |form| %>
  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.label :Confirm_password %>
  <%= form.password_field :password_confirmation %>

  <%= form.submit 'Register' %>
<% end %>
